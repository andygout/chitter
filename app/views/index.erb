<h1>Welcome to Chitter!</h1>

<Peeps>
<ul>
  <% @peeps.reverse.each do |peep| %>
    <li><%= peep.text %> (Posted by <%= peep.user.name %> (aka <a href="/users?username=<%= peep.user.username %>"><%= peep.user.username %></a>) on <%= peep.time.strftime("%A %d %B %Y at %l:%M%p (%S secs)") %>)</li>
  <% end %>
</ul>

<div id='new-peep'>
  <form action='/peeps' method='post'>
    Peep: <input type='text' name='text'>
    <input type='submit' value='Peep!'>
  </form>
</div>